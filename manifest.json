{
  "manifest_version": 3,
  "name": "Video Delay",
  "version": "1.0",
  "description": "Seamlessly delays fullscreen video. Enjoy synced audio with YouTube, Twitch, Anime sites, and more!",
  "permissions": [
    "storage"
  ],
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"],
    "css": ["styles.css"],
    "all_frames": true
  }],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "256": "icon.png"
  }
}
